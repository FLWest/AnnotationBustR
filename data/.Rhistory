MergeSearchTerms<-function(..., sort.gene=FALSE){
dots <- list(...)
for (i in sequence(length(dots))) {
working <- TRUE
if(dim(dots[[i]])[2]!=4) {
working <- FALSE
}
if(class(dots[[i]])!="data.frame") {
working <- FALSE
}
if (!working) {
stop(paste("The ", i, "th input object is the wrong format", sep=""))
}
}
new.terms <- rbind(...)
if(sort.gene) {
new.terms <- new.terms[order(new.terms$gene),]
}
return(new.terms)
}
